.header
  %h1
    = team.name
  %h2 Oppdater team informasjon

.content
  %p

  %form.pure-form.pure-form-aligned{'accept-charset' => 'utf-8', action: "/team/#{team.name}/update", role: 'form', method: 'post'}
    %fieldset
      .pure-control-group
        %label{for: 'name'} Team navn
        %input#name{name: 'name', placeholder: 'Team_Beam', type: 'text', required: '', value: team.name}/
        %span.pure-form-message-inline PÃ¥krevd felt
      .pure-control-group
        %label{for: 'avatar_url'} URL til logo
        %input#avatar_url{name: 'avatar_url', placeholder: '', type: 'text', value: team.avatar_url}/
      .pure-control-group
        %label{for: 'channel'} Slack-kanal
        %input#channel{name: 'channel', placeholder: '#aura', type: 'text', value: team.channel && team.channel.name}/
      .pure-control-group
        %label{for: 'summary'} Daglig oppsumering (kl 10.00)
        %input#summary{name: 'summary', :type => "checkbox", checked: team.summary}/
      .pure-controls
        %button.pure-button.pure-button-primary{type: 'submit'} Oppdater
