.pure-g
  - member = report.member
  %a{href: "/member/#{member.id}"}
    .pure-u
      %img.avatar{width: "64", height: "64", alt: "#{member.full_name}'s avatar", src: member.avatar_url}
    .pure-u
      %h4.name.report-header
        = member.full_name
- if report.yesterday
  .row#yesterday
    %strong I går:
    :escaped
      #{report.yesterday}
- elsif report.yesterday_report
  .row#yesterday
    %i
      %strong I går:
      :escaped
        #{report.yesterday_report.today}
- if report.today
  .row#today
    %strong I dag:
    :escaped
      #{report.today}
- if report.problem
  .row#problem
    %strong Problem(er):
    :escaped
      #{report.problem}
