!!! 5
%html
  %head
    %title= "Reports"
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %link{:crossorigin => "anonymous", :href => "https://unpkg.com/purecss@1.0.0/build/pure-min.css", :integrity => "sha384-", :rel => "stylesheet"}
    %link{:href => "https://unpkg.com/purecss@1.0.0/build/grids-responsive-min.css", :rel => "stylesheet"}
    %link{:href => "/stylesheet.css", :rel => "stylesheet"}

  %body
    - standup_date = locals['standup_date']
    - previous = Standup.previous(standup_date)
    .header
      %h2
        = standup_date
      %h4
        - if previous
          %a{href: "/standup/#{previous.created_at.to_date}"}<
            previous
          |
        %a{href: "/standup/#{Date.today}"}<
          Today

    .content
      .pure-g
        - if locals['reports'].count == 0
          .pure-u.column
            No reports for now
        - else
          - locals['reports'].each do |standup|
            .pure-u
              .column
                .row.pure-g
                  .pure-u
                    - avatar_url = standup.avatar_url ? standup.avatar_url : "/images/dummy-profile-pic.png"
                    %img.avatar{width: "64", height: "64", alt: "#{standup.name}'s avatar", src: avatar_url}
                  .pure-u
                    %h4.name
                      = standup.name
                .row#yesterday
                  %strong I gÃ¥r:
                  = standup.yesterday
                .row#today
                  %strong I dag:
                  = standup.today
                .row#problem
                  %strong Problem(er):
                  = standup.problems
